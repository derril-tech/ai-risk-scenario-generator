{
    "version": 2,
    "name": "ai-risk-scenario-generator",
    "builds": [
        {
            "src": "apps/frontend/package.json",
            "use": "@vercel/next"
        }
    ],
    "routes": [
        {
            "src": "/api/v1/(.*)",
            "dest": "https://api.ai-risk-generator.com/api/v1/$1"
        },
        {
            "src": "/(.*)",
            "dest": "apps/frontend/$1"
        }
    ],
    "env": {
        "NEXT_PUBLIC_API_URL": "https://api.ai-risk-generator.com",
        "NEXT_PUBLIC_WORKERS_URL": "https://workers.ai-risk-generator.com"
    },
    "headers": [
        {
            "source": "/(.*)",
            "headers": [
                {
                    "key": "X-Content-Type-Options",
                    "value": "nosniff"
                },
                {
                    "key": "X-Frame-Options",
                    "value": "DENY"
                },
                {
                    "key": "X-XSS-Protection",
                    "value": "1; mode=block"
                },
                {
                    "key": "Referrer-Policy",
                    "value": "strict-origin-when-cross-origin"
                },
                {
                    "key": "Permissions-Policy",
                    "value": "camera=(), microphone=(), geolocation=()"
                }
            ]
        }
    ],
    "functions": {
        "apps/frontend/src/pages/api/**/*.ts": {
            "runtime": "nodejs18.x"
        }
    },
    "regions": [
        "iad1",
        "fra1",
        "hnd1"
    ]
}